<div class="form-con">
<div class="post">
<%= form_tag sessions_path do %>
 <fieldset>
          <legend><%= t("login") %></legend>
  <div class="field">
    <%= label_tag :email %><br />
    <%= text_field_tag :email, params[:email] %>
  </div>
  <div class="field">
    <%= label_tag :password, t('password') %><br />
    <%= password_field_tag :password %>
  </div>
  <div class="actions">
    <%= submit_tag t('login') %>
  </div>
   <fieldset>
<% end %>
</div>
</div>